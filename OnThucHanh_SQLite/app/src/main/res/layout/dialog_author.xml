<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="QUẢN LÝ TÁC GIẢ"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Exit"/>

    <EditText
        android:id="@+id/ed_authorID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter ID"
        android:inputType="number" />

    <EditText
        android:id="@+id/ed_authorFName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter firstname name"/>

    <EditText
        android:id="@+id/ed_authorLName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter last name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_authorSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"/>

        <Button
            android:id="@+id/btn_authorSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"/>

        <Button
            android:id="@+id/btn_authorDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>

        <Button
            android:id="@+id/btn_authorUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_Authors"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>